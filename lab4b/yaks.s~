YKEnterMutex:
	cli
	ret
YKExitMutex:
	sti
	ret
YKsavecontext:
	pushf
	push	bx
	add	sp, 2
	mov	bx, sp
	or	word[bx], 0x0200
	sub	sp, 2
	pop	bx
	push	cs
	push	word[bp+2]
	push	word[bp]
	push	si
	push	di
	push	ds
	push	es
	push	dx
	push	cx
	push	bx
	push	ax
	mov	[YKsave], sp
	jmp	YKrestorecontext
YKDispatcher:
	push	bp
	mov	bp, sp
	push	ax
	mov	ax, [bp+4]
	cmp	ax, 1
	pop	ax
	je	YKsavecontext
YKrestorecontext:
	mov	sp, [YKrestore]
	pop	ax
	pop	bx
	pop	cx
	pop	dx
	pop	es
	pop	ds
	pop	di
	pop	si
	pop	bp	
	iret
YKsaveSP:
	add	sp, 6
	mov	word [YKsave], sp  ;ISR saved context is two function calls away
	sub	sp, 6
	ret
